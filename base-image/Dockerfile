FROM mcin/fsl:6.0.5

# Install MATLAB runtime
# Code generated by NeuroDocker
ENV LD_LIBRARY_PATH="$LD_LIBRARY_PATH:/usr/lib/x86_64-linux-gnu:/opt/MCR-2021b/v911/runtime/glnxa64:/opt/MCR-2021b/v911/bin/glnxa64:/opt/MCR-2021b/v911/sys/os/glnxa64:/opt/MCR-2021b/v911/extern/bin/glnxa64" \
    MATLABCMD="/opt/MCR-2021b/2021b/toolbox/matlab" \
    XAPPLRESDIR="/opt//opt/MCR-2021b/v911/x11/app-defaults" \
    MCRROOT="/opt/MCR-2021b/2021b"
RUN export TMPDIR="$(mktemp -d)" \
    && apt-get update -qq \
    && apt-get install -y -q --no-install-recommends \
           bc \
           curl \
           dbus-x11 \
           libncurses5 \
           libxext6 \
           libxmu6 \
           libxpm-dev \
           libxt6 \
           multiarch-support \
           openjdk-8-jre \
           unzip \
    && rm -rf /var/lib/apt/lists/* \
    && _reproenv_tmppath="$(mktemp -t tmp.XXXXXXXXXX.deb)" \
    && curl -fsSL --retry 5 -o "${_reproenv_tmppath}" http://launchpadlibrarian.net/160108232/libxp6_1.0.2-1ubuntu1_amd64.deb \
    && apt-get install --yes -q "${_reproenv_tmppath}" \
    && rm "${_reproenv_tmppath}" \
    && apt-get update -qq \
    && apt-get install --yes --quiet --fix-missing \
    && rm -rf /var/lib/apt/lists/* \
    && echo "Downloading MATLAB Compiler Runtime ..." \
    && curl  -o "$TMPDIR/mcr.zip" https://ssd.mathworks.com/supportfiles/downloads/R2021b/Release/2/deployment_files/installer/complete/glnxa64/MATLAB_Runtime_R2021b_Update_2_glnxa64.zip \
    && unzip -q "$TMPDIR/mcr.zip" -d "$TMPDIR/mcrtmp" \
    && "$TMPDIR/mcrtmp/install" -destinationFolder /opt/MCR-2021b -mode silent -agreeToLicense yes \
    && rm -rf "$TMPDIR" \
    && unset TMPDIR

RUN test "$(getent passwd nonroot)" \
    || useradd --no-user-group --create-home --shell /bin/bash nonroot
USER nonroot

